{
  "rules": {
    "leaderboard": {
      ".indexOn": ["bestScore", "totalScore", "lastUpdated"],
      ".read": true,
      "$userId": {
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "gameHistory": {
      "$userId": {
        ".indexOn": ["timestamp"],
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}
